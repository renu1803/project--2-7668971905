#include <stdio.h>
void concatenate(char str1[], char str2[]) {
    int i = 0, j = 0;
    // Finding the end of the first string
    while (str1[i] != '\0')
    {
        i++;
    }
    // Appending the second string to the end of the first string
    while (str2[j] != '\0') 
    {
        str1[i] = str2[j];
        i++;
        j++;
    }
    // Adding null character to mark the end of the concatenated string
    str1[i] = '\0';
}
int main() 
{
    char str1[50] ;
    printf("Enter the first string :");
    scanf("%s", str1);
    printf("Enter the second strigs :");
    char str2[50];
    scanf("%s", str2);
    concatenate(str1, str2);
    printf("Concatenated string is : %s\n", str1);
    return 0;
}
