// 766897190507smg
#include <stdio.h>
#define m 1000
int avg(int arr[], int n) 
{
  int sum = 0;
  for (int i = 0; i < n; i++) 
  {
      sum += arr[i];
  }
  return n == 0 ? 0 : sum / n;
}
int main() 
{
  int arr[m], n = 0, input;
  printf("Enter the numbers (Enter a -1 to stop): ");
  while (1) 
  {
    scanf("%d", &input);
    if (input >= 0 || input<-1) 
    {
      if (n < m)    // Check the array size doesn't exceed maximum
      { 
        if ( input>=0)
        {
          arr[n] = input;
          n++;
        } 
      }
      else
      {
        printf("Array size exceeded allowed size. Ignoring further inputs.\n");
            break;
      }
    }
    else
    {
      break;
    }
   }
    if (n > 0) 
    {
      printf("Average of sequence is: %d\n", avg(arr, n));
    } 
    return 0;
}
