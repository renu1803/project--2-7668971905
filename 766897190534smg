#include <stdio.h>
int add(int arr[100][100], int m, int n) 
{    int sum=0;
     int size=m*n;
     for(int i = 0; i < m; i++) 
     {
        for(int j = 0; j < n; j++) 
        {
           int a = arr[i][j];
           sum += a;
        }
     }   
    return sum ;
}
int main()
{
    int m, n;
    int arr[100][100];
    printf("Enter the number of rows and columns of matrix: ");
    scanf("%d%d", &m, &n);
    printf("Enter the elements of  matrix:\n");
    for (int i = 0; i < m; i++) 
    {
        for (int j = 0; j < n; j++) 
        {
            scanf("%d", &arr[i][j]);
        }
    }
    printf("sum of matrix is : ");
    printf("%d",add(arr, m, n)); 
    return 0;
}
