#include <stdio.h>
void reverse_array(char arr[], int n) 
{
  int start = 0;
  int end = n - 1;    
  while (start < end) 
  {
  // Swap the characters at the start and end pointers
    char temp = arr[start];
    arr[start] = arr[end];
    arr[end] = temp;
    start++;
    end--;
  }
}
int main() 
{
    int n; 
    printf("Enter the size of array: ");
    scanf("%d", &n);
    getchar(); 
    char arr[100];
    printf("Enter the characters : ");
    for(int i = 0; i < n; i++) {
        scanf("%c", &arr[i]);
        getchar();           // Consume the newline character left after entering each character
    }
    reverse_array(arr, n);
    // Print the reversed array
    printf("Reversed array: ");
    for (int i = 0; i < n; i++) 
    {
        printf("%c ", arr[i]);
    }
    printf("\n");
    
    return 0;
}
