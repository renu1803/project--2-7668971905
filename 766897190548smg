#include <stdio.h>
#include <stdlib.h>
int linearsearch(int arr[], int size, int input) 
{
    for (int i = 0; i < size; i++) 
    {
        if (input == arr[i])
        {
            printf("Element is found!!");
            return 1;     // Element found
        }
    }
    return 0;     // Element not found
}
int main() {
    int m, n, input;
    printf("Enter the size of array: ");    // Taking  size input from user
    scanf("%d", &n);
    int arr[n];
    printf("Enter the elements of array:\n");
    for (int i = 0; i < n; i++) 
    {
        scanf("%d", &arr[i]);
    }
    printf("Enter the search element: ");
    scanf("%d", &input);
    int found = linearsearch(arr, n, input);
    if (!found) 
    {
        printf("Element not found!!");
    }
    return 0;
}
